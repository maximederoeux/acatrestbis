<%= simple_form_for(@opening) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <b><%= f.label :weekday %></b><br>
    <%= f.select :weekday, @weekdays, {prompt: false}, {class: "form-control"} %>
    <%= f.input :open %>
    <%= f.input :close %>
    <b><%= f.label :season %></b><br>
    <%= f.select :season, @seasons, {prompt: false}, {class: "form-control"} %>  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
